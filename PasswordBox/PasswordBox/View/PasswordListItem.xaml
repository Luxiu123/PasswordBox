<?xml version="1.0" encoding="utf-8" ?>
<UserControl
  x:Class="PasswordBox.View.PasswordListItem"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="using:PasswordBox.View"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="40" />
      <ColumnDefinition />
      <ColumnDefinition />
      <ColumnDefinition Width="80" />
    </Grid.ColumnDefinitions>
    <TextBlock Grid.Column="1" Text="{x:Bind PasswordInfo.AppName, Mode=OneWay}" />
    <TextBlock Grid.Column="2" Text="{x:Bind PasswordInfo.Account, Mode=OneWay}" />
  </Grid>
</UserControl>
